<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <!-- Servlet used to load log4j properties. -->
    <servlet>
        <servlet-name>Log4jServletInit</servlet-name>
        <servlet-class>com.nuevatel.common.servlet.log4j.Log4jServletInit</servlet-class>
        <init-param>
            <param-name>log4j-init-xml-file</param-name>
            <param-value>WEB-INF/log4j.xml</param-value>
        </init-param>
        <!-- Indicate the servlet will load on startup -->
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Log4jServletInit</servlet-name>
        <url-pattern>/Log4jServletInit</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
